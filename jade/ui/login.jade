.modal.hide.fade
	.modal-header
		h3 Login
	.modal-body
		form
			label(for='username') Username
			input.span3(type='text', name='username', id='username', style="float: left; height: 27px")
			#username-alert.alert.alert-error.span3(style="visibility:hidden")
			br(style="clear:both")
			label(for='password') Password
			input.span3(type='password', name='password', id='password', style="float: left; height: 27px")
			#password-alert.alert.alert-error.span3(style="visibility:hidden")
			br(style="clear:both")
			#login-alert.alert.alert-error.span6(style="display: none")
			br
			button.btn.btn-primary(type="button") Login
