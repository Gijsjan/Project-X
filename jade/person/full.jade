.user(id!="object-<%= id %>")
	h2.user-title <%= username %>
	nav.user-menu
		a.editevent(href!="/person/<%= username %>/edit") edit 
		span.delevent delete
	.user-info
	.user-body

		h3 Groups
		lu
			<% groups.each(function(group) { %>
			li
				a(href!="/group/<%= group.id %>") <%= group.get('title') %> 
				<%= group.get('type').value %>
			<% }); %>

		h3 Content
		lu
			<% content.each(function(con) { %>
			li
				a(href!="/content/<%= con.get('content_type').value %>/<%= con.id %>") <%= con.get('title') %> 
				<%= con.get('content_type').value %>
			<% }); %>
